<script>
// Country data
const countryData = {
  'US': { name: 'United States', flag: '🇺🇸', currency: 'USD' },
  'GB': { name: 'United Kingdom', flag: '🇬🇧', currency: 'GBP' },
  'CA': { name: 'Canada', flag: '🇨🇦', currency: 'CAD' },
  'AU': { name: 'Australia', flag: '🇦🇺', currency: 'AUD' },
  'DE': { name: 'Germany', flag: '🇩🇪', currency: 'EUR' },
  'FR': { name: 'France', flag: '🇫🇷', currency: 'EUR' },
  'JP': { name: 'Japan', flag: '🇯🇵', currency: 'JPY' },
  'KR': { name: 'South Korea', flag: '🇰🇷', currency: 'KRW' },
  'SG': { name: 'Singapore', flag: '🇸🇬', currency: 'SGD' },
  'VN': { name: 'Vietnam', flag: '🇻🇳', currency: 'VND' }
};

// Initialize when DOM loads
document.addEventListener('DOMContentLoaded', function() {
  initializeLocation();
  setupLocationEvents();
});

// Setup event listeners with better error handling
function setupLocationEvents() {
  const locationSelector = document.getElementById('locationSelector');
  const dropdown = document.getElementById('locationDropdown');
  
  if (!locationSelector || !dropdown) {
    console.error('Location elements not found');
    return;
  }

  // Click to toggle dropdown
  locationSelector.addEventListener('click', function(e) {
    e.preventDefault();
    e.stopPropagation();
    
    console.log('Location selector clicked');
    
    // Close any other open dropdowns first
    document.querySelectorAll('.custom-header__location-dropdown.show').forEach(dd => {
      if (dd !== dropdown) dd.classList.remove('show');
    });
    
    // Toggle this dropdown
    dropdown.classList.toggle('show');
    
    console.log('Dropdown show state:', dropdown.classList.contains('show'));
  });

  // Handle clicks on dropdown items
  const locationItems = dropdown.querySelectorAll('.custom-header__location-item');
  console.log('Found location items:', locationItems.length);
  
  locationItems.forEach(function(item, index) {
    item.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      
      console.log('Location item clicked:', index);
      
      const code = this.getAttribute('data-code');
      const name = this.getAttribute('data-name');
      const flag = this.getAttribute('data-flag');
      const currency = this.getAttribute('data-currency');
      
      console.log('Selected country data:', { code, name, flag, currency });
      
      if (code && name && flag && currency) {
        selectCountry(code, name, flag, currency);
      } else {
        console.error('Missing country data attributes');
      }
    });

    // Add hover effect for debugging
    item.addEventListener('mouseenter', function() {
      console.log('Hovering over:', this.getAttribute('data-name'));
    });
  });

  // Close dropdown when clicking outside
  document.addEventListener('click', function(e) {
    if (!locationSelector.contains(e.target)) {
      dropdown.classList.remove('show');
    }
  });

  // Close dropdown on escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      dropdown.classList.remove('show');
    }
  });
}

// Initialize location
function initializeLocation() {
  const savedCountry = localStorage.getItem('selectedCountry');
  
  if (savedCountry && countryData[savedCountry]) {
    const country = countryData[savedCountry];
    selectCountry(savedCountry, country.name, country.flag, country.currency, false);
  }
}

// Select country function
function selectCountry(countryCode, countryName, countryFlag, currency, savePreference = true) {
  console.log('Selecting country:', { countryCode, countryName, countryFlag, currency });
  
  // Update location display
  const selectedLocationCode = document.getElementById('selectedLocationCode');
  const selectedLocationName = document.getElementById('selectedLocationName');
  
  if (selectedLocationCode) {
    selectedLocationCode.textContent = countryCode;
  }
  
  if (selectedLocationName) {
    selectedLocationName.textContent = countryName;
    selectedLocationName.style.display = '';
  }
  
  // Update currency display
  const currencyFlag = document.getElementById('currencyFlag');
  const currencyCode = document.getElementById('currencyCode');
  
  if (currencyFlag) {
    currencyFlag.textContent = countryFlag;
    currencyFlag.style.display = '';
  }
  
  if (currencyCode) {
    currencyCode.textContent = currency;
    currencyCode.style.display = '';
  }
  
  // Save preference
  if (savePreference) {
    localStorage.setItem('selectedCountry', countryCode);
    console.log('Saved country preference:', countryCode);
  }
  
  // Close dropdown
  const dropdown = document.getElementById('locationDropdown');
  if (dropdown) {
    dropdown.classList.remove('show');
  }
  
  // Dispatch custom event
  const event = new CustomEvent('countryChanged', {
    detail: { countryCode, countryName, currency }
  });
  window.dispatchEvent(event);
  
  console.log('Country selection completed');
}

// Header scroll functionality
let lastScrollTop = 0;
let scrollTimeout;

window.addEventListener('scroll', function() {
  const currentScroll = window.pageYOffset || document.documentElement.scrollTop;
  const header = document.querySelector('.custom-header__wrapper');
  const banner = document.querySelector('.sale-banner');
  const topRow = document.querySelector('.custom-header__top-row');
  
  clearTimeout(scrollTimeout);
  
  scrollTimeout = setTimeout(function() {
    if (currentScroll > lastScrollTop && currentScroll > 100) {
      if (header) header.classList.add('hidden');
    } else {
      if (header) header.classList.remove('hidden');
    }
    
    if (currentScroll > 50) {
      if (header) header.classList.add('scrolled');
      if (banner) banner.classList.add('hidden');
      if (topRow) topRow.classList.add('hidden');
    } else {
      if (header) header.classList.remove('scrolled');
      if (banner) banner.classList.remove('hidden');
      if (topRow) topRow.classList.remove('hidden');
    }
    
    lastScrollTop = currentScroll <= 0 ? 0 : currentScroll;
  }, 50);
});

// Debug function
window.debugLocation = function() {
  console.log('=== LOCATION DEBUG ===');
  console.log('Location selector:', document.getElementById('locationSelector'));
  console.log('Dropdown:', document.getElementById('locationDropdown'));
  console.log('Location items:', document.querySelectorAll('.custom-header__location-item').length);
  console.log('Country data:', countryData);
};

// Call debug on load
console.log('Location script loaded. Call debugLocation() for diagnostics.');
</script>
