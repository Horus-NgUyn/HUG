@media screen and (max-width: 768px) {
  .custom-header__top-row {
    flex-direction: column;
    gap: 8px;
    padding: 6px 20px;
    overflow: visible;
  }

  .custom-header__top-center {
    position: static;
    transform: none;
  }

  .custom-header__bottom-row {
    flex-direction: column;
    height: auto;
    padding: 15px 20px;
  }

  .custom-header__navigation {
    order: 2;
    margin-top: 10px;
    gap: 10px;
  }

  .custom-header__logo {
    position: static;
