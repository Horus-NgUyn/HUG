{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  /* Scroll Animation Styles */
  .scroll-reveal {
    opacity: 0;
    transform: translateY(50px);
    transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    will-change: opacity, transform;
  }

  .scroll-reveal.revealed {
    opacity: 1;
    transform: translateY(0);
  }

  .scroll-reveal.fade-in-up {
    transform: translateY(80px);
  }

  .scroll-reveal.fade-in-up.revealed {
    transform: translateY(0);
  }

  /* Enhanced header animation - chậm và nổi bật hơn */
  .ai-product-showcase-header-{{ ai_gen_id }}.scroll-reveal.fade-in-up {
    opacity: 0;
    transform: translateY(120px) scale(0.8);
    transition: all 1.6s cubic-bezier(0.16, 1, 0.3, 1);
    will-change: opacity, transform;
  }

  .ai-product-showcase-header-{{ ai_gen_id }}.scroll-reveal.fade-in-up.revealed {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  .scroll-reveal.fade-in-left {
    transform: translateX(-50px);
  }

  .scroll-reveal.fade-in-left.revealed {
    transform: translateX(0);
  }

  .scroll-reveal.fade-in-right {
    transform: translateX(50px);
  }

  .scroll-reveal.fade-in-right.revealed {
    transform: translateX(0);
  }

  /* Staggered animation for features */
  /* .scroll-reveal.delay-1 { transition-delay: 0.1s; }
  .scroll-reveal.delay-2 { transition-delay: 0.2s; }
  .scroll-reveal.delay-3 { transition-delay: 0.3s; }
  .scroll-reveal.delay-4 { transition-delay: 0.4s; }
  .scroll-reveal.delay-5 { transition-delay: 0.5s; }
  .scroll-reveal.delay-6 { transition-delay: 0.6s; }
  .scroll-reveal.delay-7 { transition-delay: 0.7s; }
  .scroll-reveal.delay-8 { transition-delay: 0.8s; } */

  .ai-product-showcase-{{ ai_gen_id }} {
    background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    padding: 20px 10px;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-showcase-container-{{ ai_gen_id }} {
    max-width: 100%;
    width: 100%;
    margin: 0;
    padding-left: 20px;
    padding-right: 20px;
    text-align: left;
    position: relative;
    z-index: 10;
  }

  /* Header với logo và tên sản phẩm nằm ngang */
  .ai-product-showcase-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 10px;
    transform: translateY(150px);
  }

  .brand-logo-name-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 30px;
    margin-bottom: 20px;
    flex-wrap: wrap;
  }

  .ai-product-showcase-logo-{{ ai_gen_id }} {
    width: auto !important;
    height: 70px !important;
    max-width: 250px;
    margin: 0;
    display: block;
  }

  .ai-product-showcase-logo-placeholder-{{ ai_gen_id }} {
    width: 150px;
    height: 70px;
    margin: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-showcase-product-name-{{ ai_gen_id }} {
    font-size: 42px;
    font-weight: 700;
    color: {{ block.settings.title_color }};
    margin: 0;
    letter-spacing: 2px;
  }

  .ai-product-showcase-description-{{ ai_gen_id }} {
    font-size: 18px;
    color: {{ block.settings.description_color }};
    margin: 0;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Content layout với grid 2 cột - Features 40%, Image 60% */
  .ai-product-showcase-content-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 2fr 3fr;
    gap: 15px;
    align-items: start;
    position: relative;
    overflow: visible;
    margin-top: 15px;
  }

  /* Features section - 2 cột với kích thước lớn hơn */
  .ai-product-showcase-features-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 15px;
    position: relative;
    z-index: 15;
    transform: none;
    max-width: 100%;
    padding-top: 20px;
  }

  /* Remove initial transform when scroll animation is active */
  .ai-product-showcase-features-{{ ai_gen_id }}.scroll-reveal {
    transform: translateY(50px);
  }

  .ai-product-showcase-feature-{{ ai_gen_id }} {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 15px;
    background: transparent;
    box-shadow: none;
    text-align: left;
    min-height: 65px;
    transition: transform 0.3s ease;
    padding: 8px 0;
    box-sizing: border-box;
    overflow: hidden;
  }

  .ai-product-showcase-feature-{{ ai_gen_id }}:hover {
    transform: translateX(10px);
  }

  /* Icon với kích thước lớn hơn */
  .ai-product-showcase-feature-icon-{{ ai_gen_id }} {
    width: 60px;
    height: 60px;
    margin: 0;
    background: transparent;
    border-radius: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.icon_color }};
    flex-shrink: 0;
  }

  .ai-product-showcase-feature-icon-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
  }

  .ai-product-showcase-feature-icon-{{ ai_gen_id }} img {
    width: 60px !important;
    height: 60px !important;
    object-fit: contain;
  }

  .ai-product-showcase-feature-content-{{ ai_gen_id }} {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .ai-product-showcase-feature-text-{{ ai_gen_id }} {
    font-size: 17px;
    font-weight: 600;
    color: {{ block.settings.feature_text_color }};
    margin: 0;
    line-height: 1.3;
    white-space: normal;
    word-break: keep-all;
    word-wrap: break-word;
    hyphens: none;
  }

  .ai-product-showcase-feature-description-{{ ai_gen_id }} {
    font-size: 14px;
    font-weight: 400;
    color: {{ block.settings.description_color | default: '#888888' }};
    margin: 0;
    line-height: 1.4;
    white-space: normal;
    word-break: keep-all;
    word-wrap: break-word;
    hyphens: none;
    opacity: 0.8;
    padding: 4px;
  }

  /* Image container */
  .ai-product-showcase-image-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: auto;
    text-align: center;
    overflow: hidden;
    z-index: 1;
  }
  .ai-product-showcase-image-container-{{ ai_gen_id }} {
    opacity: 1 !important;
    transform: none !important;
    transition: none !important;
  }

  .ai-product-showcase-image-{{ ai_gen_id }} {
    opacity: 1 !important;
    transform: none !important;
  }

  .ai-product-showcase-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    max-height: none;
    object-fit: contain;
    position: relative;
    z-index: 1;
    /* transform: translateX(-15%); */
    opacity: 1;
  }

  .ai-product-showcase-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 600px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 1;
  }

  .ai-product-showcase-image-placeholder-{{ ai_gen_id }} svg {
    width: 200px;
    height: 200px;
    opacity: 0.3;
  }

  .ai-product-showcase-mobile-image-{{ ai_gen_id }} {
    display: none !important;
  }

  /* Desktop styles - dịch chuyển features sang phải 250px */
  @media screen and (min-width: 960px) {
    .ai-product-showcase-features-{{ ai_gen_id }} {
      transform: translateX(250px);
    }
    
    .ai-product-showcase-features-{{ ai_gen_id }}.scroll-reveal {
      transform: translateX(250px) translateY(50px);
    }
    
    .ai-product-showcase-features-{{ ai_gen_id }}.scroll-reveal.revealed {
      transform: translateX(250px) translateY(0);
    }
  }

  /* Responsive Design */
  @media screen and (max-width: 959px) {
    .ai-product-showcase-{{ ai_gen_id }} {
      padding: 20px 10px;
      overflow-x: hidden;
      width: 100%;
    }

    .ai-product-showcase-container-{{ ai_gen_id }} {
      max-width: 100%;
      width: 100%;
      padding-left: 20px;
      padding-right: 20px;
      overflow-x: hidden;
      box-sizing: border-box;
    }

    .ai-product-showcase-header-{{ ai_gen_id }} {
      margin-top: 20px;
      margin-bottom: 20px;
      transform: none;
    }

    .ai-product-showcase-content-{{ ai_gen_id }} {
      display: grid;
      grid-template-columns: 1fr;
      gap: 12px;
      align-items: start;
      margin-top: 12px;
    }

    .ai-product-showcase-product-name-{{ ai_gen_id }} {
      font-size: 36px;
    }

    .ai-product-showcase-feature-icon-{{ ai_gen_id }} {
      width: 50px;
      height: 50px;
    }

    .ai-product-showcase-feature-icon-{{ ai_gen_id }} svg,
    .ai-product-showcase-feature-icon-{{ ai_gen_id }} img {
      width: 50px !important;
      height: 50px !important;
    }

    .ai-product-showcase-feature-text-{{ ai_gen_id }} {
      font-size: 14px;
      word-break: keep-all;
      white-space: normal;
      overflow: visible;
      line-height: 1.2;
    }

    .ai-product-showcase-feature-description-{{ ai_gen_id }} {
      font-size: 12px;
      word-break: keep-all;
      hyphens: none;
    }

    .ai-product-showcase-features-{{ ai_gen_id }} {
      grid-template-columns: repeat(4, 1fr);
      gap: 8px;
      transform: none;
      margin: 0 20px;
      max-width: calc(100% - 40px);
      overflow: visible;
    }

    .ai-product-showcase-features-{{ ai_gen_id }}.scroll-reveal {
      transform: translateY(30px);
    }

    .ai-product-showcase-image-{{ ai_gen_id }} {
      width: 100%;
      transform: none;
    }

    .ai-product-showcase-header-{{ ai_gen_id }}.scroll-reveal {
      transform: translateY(30px);
    }
    
    .ai-product-showcase-header-{{ ai_gen_id }}.scroll-reveal.fade-in-up {
      opacity: 0;
      transform: translateY(80px) scale(0.85);
      transition: all 1.4s cubic-bezier(0.16, 1, 0.3, 1);
    }
    
    .ai-product-showcase-header-{{ ai_gen_id }}.scroll-reveal.fade-in-up.revealed {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  @media screen and (max-width: 767px) {
    .ai-product-showcase-header-{{ ai_gen_id }} {
      margin-top: 20px;
      margin-bottom: 20px;
      transform: none;
    }

    .ai-product-showcase-content-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 10px;
      margin-top: 6px;
    }

    .ai-product-showcase-image-{{ ai_gen_id }} {
      width: 100%;
      transform: none;
    }

    .brand-logo-name-wrapper {
      flex-direction: column;
      gap: 10px;
    }

    .ai-product-showcase-product-name-{{ ai_gen_id }} {
      font-size: 26px;
      letter-spacing: 1px;
    }

    .ai-product-showcase-description-{{ ai_gen_id }} {
      font-size: 16px;
    }

    .ai-product-showcase-features-{{ ai_gen_id }} {
      grid-template-columns: 1fr 1fr;
      gap: 8px;
      transform: none !important;
      margin: 0 20px;
      max-width: calc(100% - 40px);
      overflow: visible;
    }

    .ai-product-showcase-features-{{ ai_gen_id }}.scroll-reveal {
      transform: translateY(20px);
    }



    .ai-product-showcase-header-{{ ai_gen_id }}.scroll-reveal {
      transform: translateY(20px);
    }
    
    .ai-product-showcase-header-{{ ai_gen_id }}.scroll-reveal.fade-in-up {
      opacity: 0;
      transform: translateY(60px) scale(0.9);
      transition: all 1.2s cubic-bezier(0.16, 1, 0.3, 1);
    }
    
    .ai-product-showcase-header-{{ ai_gen_id }}.scroll-reveal.fade-in-up.revealed {
      opacity: 1;
      transform: translateY(0) scale(1);
    }

    .ai-product-showcase-feature-icon-{{ ai_gen_id }} {
      width: 50px;
      height: 50px;
    }

    .ai-product-showcase-feature-icon-{{ ai_gen_id }} svg,
    .ai-product-showcase-feature-icon-{{ ai_gen_id }} img {
      width: 40px !important;
      height: 40px !important;
    }

    .ai-product-showcase-feature-text-{{ ai_gen_id }} {
      font-size: 12px;
      word-break: keep-all;
      white-space: normal;
      overflow: visible;
      line-height: 1.2;
    }

    .ai-product-showcase-feature-description-{{ ai_gen_id }} {
      font-size: 10px;
      word-break: keep-all;
      hyphens: none;
    }

    .ai-product-showcase-desktop-image-{{ ai_gen_id }} {
      display: none;
    }

    .ai-product-showcase-mobile-image-{{ ai_gen_id }} {
      display: none !important;
    }

    .ai-product-showcase-image-placeholder-{{ ai_gen_id }} {
      height: 400px;
    }
  }

  @media screen and (max-width: 476px) {
    .ai-product-showcase-{{ ai_gen_id }} {
      padding: 30px 10px;
    }

    .ai-product-showcase-container-{{ ai_gen_id }} {
      padding-left: 20px;
      padding-right: 20px;
    }

    .ai-product-showcase-header-{{ ai_gen_id }} {
      margin-top: 20px;
      margin-bottom: 20px;
      transform: none;
    }

    .ai-product-showcase-features-{{ ai_gen_id }} {
      margin: 0 20px;
      max-width: calc(100% - 40px);
      overflow: hidden;
    }

    .ai-product-showcase-product-name-{{ ai_gen_id }} {
      font-size: 24px;
    }

    .ai-product-showcase-feature-{{ ai_gen_id }} {
      gap: 8px;
      padding: 4px 0;
    }

    .ai-product-showcase-feature-icon-{{ ai_gen_id }} {
      width: 40px;
      height: 40px;
    }

    .ai-product-showcase-feature-icon-{{ ai_gen_id }} svg,
    .ai-product-showcase-feature-icon-{{ ai_gen_id }} img {
      width: 40px !important;
      height: 40px !important;
    }

    .ai-product-showcase-feature-text-{{ ai_gen_id }} {
      font-size: 12px;
      word-break: keep-all;
      white-space: normal;
      overflow: visible;
      line-height: 1.2;
    }

    .ai-product-showcase-logo-{{ ai_gen_id }},
    .ai-product-showcase-logo-placeholder-{{ ai_gen_id }} {
      display: none;
    }
  }
{% endstyle %}

<div class="ai-product-showcase-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-showcase-container-{{ ai_gen_id }}">
    <!-- Header với tên sản phẩm -->
    <div class="ai-product-showcase-header-{{ ai_gen_id }} scroll-reveal fade-in-up" data-scroll-delay="0">
      <div class="brand-logo-name-wrapper">
        <h1 class="ai-product-showcase-product-name-{{ ai_gen_id }}">{{ block.settings.product_name }}</h1>
      </div>
      <p class="ai-product-showcase-description-{{ ai_gen_id }}">{{ block.settings.product_description }}</p>
    </div>

    <!-- Content với features và image -->
    <div class="ai-product-showcase-content-{{ ai_gen_id }}">
      <!-- Features section - 2 cột -->
      <div class="ai-product-showcase-features-{{ ai_gen_id }} scroll-reveal fade-in-left" data-scroll-delay="0">
        {% for i in (1..8) %}
          {% liquid
            assign feature_text_key = 'feature_' | append: i | append: '_text'
            assign feature_text = block.settings[feature_text_key]
            assign feature_desc_key = 'feature_' | append: i | append: '_description'
            assign feature_desc = block.settings[feature_desc_key]
            assign feature_icon_key = 'feature_' | append: i | append: '_icon'
            assign feature_icon = block.settings[feature_icon_key]
          %}
          
          {% if feature_text != blank %}
            <!-- Debug: feature_icon_{{ i }}: "{{ feature_icon }}" (Type: {{ feature_icon | type }}) -->
            <!-- Debug: feature_icon_key: "{{ feature_icon_key }}" -->
            <!-- Debug: block.settings check: {{ block.settings[feature_icon_key] }} -->
            <div class="ai-product-showcase-feature-{{ ai_gen_id }} scroll-reveal fade-in-up delay-{{ i }}" data-scroll-delay="100">
              <div class="ai-product-showcase-feature-icon-{{ ai_gen_id }}">
                {% assign has_custom_icon = false %}
                {% if feature_icon and feature_icon != blank and feature_icon != empty %}
                  {% assign has_custom_icon = true %}
                  <!-- Custom icon detected -->
                  <img
                    src="{{ feature_icon | image_url: width: 120 }}"
                    alt="Feature {{ i }} icon"
                    width="120"
                    height="120"
                    loading="lazy"
                    style="display: block; max-width: 100%; height: auto;"
                    onerror="console.log('Custom icon failed to load for feature {{ i }}:', this.src); this.style.display='none'; this.parentElement.querySelector('.fallback-svg').style.display='block';"
                  >

                  <div class="fallback-svg" style="display: none;">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="12" r="10"/>
                      <path d="m9 12 2 2 4-4"/>
                    </svg>
                  </div>
                {% endif %}
                
                {% unless has_custom_icon %}
                  {% case i %}
                    {% when 1 %}
                      <svg xmlns="https://cdn.shopify.com/s/files/1/0955/4932/5630/files/1_trai.png?v=1755503452" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/>
                      </svg>
                    {% when 2 %}
                      <svg xmlns="https://cdn.shopify.com/s/files/1/0955/4932/5630/files/1_ph_i.png?v=1755503452" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M14 14.76V3.5a2.5 2.5 0 0 0-5 0v11.26a3.5 3.5 0 1 0 5 0z"/>
                      </svg>
                    {% when 3 %}
                      <svg xmlns="https://cdn.shopify.com/s/files/1/0955/4932/5630/files/2_trai.png?v=1755503452" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"/>
                        <polyline points="12,6 12,12 16,14"/>
                      </svg>
                    {% when 4 %}
                      <svg xmlns="https://cdn.shopify.com/s/files/1/0955/4932/5630/files/2_ph_i.png?v=1755503452" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M5 12.55a11 11 0 0 1 14.08 0"/>
                        <path d="M1.42 9a16 16 0 0 1 21.16 0"/>
                        <path d="M8.53 16.11a6 6 0 0 1 6.95 0"/>
                        <line x1="12" y1="20" x2="12.01" y2="20"/>
                      </svg>
                    {% when 5 %}
                      <svg xmlns="https://cdn.shopify.com/s/files/1/0955/4932/5630/files/3_trai.png?v=1755503452" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
                        <circle cx="12" cy="12" r="4"/>
                      </svg>
                    {% when 6 %}
                      <svg xmlns="https://cdn.shopify.com/s/files/1/0955/4932/5630/files/3_ph_i.png?v=1755503452" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                        <line x1="16" y1="2" x2="16" y2="6"/>
                        <line x1="8" y1="2" x2="8" y2="6"/>
                        <line x1="3" y1="10" x2="21" y2="10"/>
                        <path d="M8 14h.01"/>
                        <path d="M12 14h.01"/>
                        <path d="M16 14h.01"/>
                        <path d="M8 18h.01"/>
                        <path d="M12 18h.01"/>
                        <path d="M16 18h.01"/>
                      </svg>
                    {% when 7 %}
                      <svg xmlns="https://cdn.shopify.com/s/files/1/0955/4932/5630/files/4_trai.png?v=1755503452" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 2v6.5"/>
                        <path d="M12 22v-6.5"/>
                        <path d="M22 12h-6.5"/>
                        <path d="M2 12h6.5"/>
                        <path d="M18.36 5.64l-4.6 4.6"/>
                        <path d="M5.64 18.36l4.6-4.6"/>
                        <path d="M18.36 18.36l-4.6-4.6"/>
                        <path d="M5.64 5.64l4.6 4.6"/>
                      </svg>
                    {% when 8 %}
                      <svg xmlns="https://cdn.shopify.com/s/files/1/0955/4932/5630/files/4_ph_i.png?v=1755503452" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                        <path d="M2 17l10 5 10-5"/>
                        <path d="M2 12l10 5 10-5"/>
                      </svg>
                  {% endcase %}
                {% endunless %}
              </div>
              <div class="ai-product-showcase-feature-content-{{ ai_gen_id }}">
                <p class="ai-product-showcase-feature-text-{{ ai_gen_id }}">{{ feature_text }}</p>
                {% if feature_desc != blank %}
                  <p class="ai-product-showcase-feature-description-{{ ai_gen_id }}">{{ feature_desc }}</p>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <!-- Image section -->
      <div class="ai-product-showcase-image-container-{{ ai_gen_id }}">
        {% if block.settings.desktop_image %}
          <img
            src="{{ block.settings.desktop_image | image_url: width: 800 }}"
            alt="{{ block.settings.desktop_image.alt | default: block.settings.product_name | escape }}"
            class="ai-product-showcase-image-{{ ai_gen_id }} ai-product-showcase-desktop-image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.desktop_image.width }}"
            height="{{ block.settings.desktop_image.height }}"
          >
        {% else %}
          <div class="ai-product-showcase-image-placeholder-{{ ai_gen_id }} ai-product-showcase-desktop-image-{{ ai_gen_id }}">
            {{ 'product-apparel-1' | placeholder_svg_tag }}
          </div>
