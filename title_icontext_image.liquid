{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-showcase-{{ ai_gen_id }} {
    background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    padding: 20px 10px;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-showcase-container-{{ ai_gen_id }} {
    max-width: 100%;
    width: 100%;
    margin: 0;
    padding-left: 20px;
    padding-right: 20px;
    text-align: left;
    position: relative;
    z-index: 10;
  }

  /* Header với logo và tên sản phẩm nằm ngang */
  .ai-product-showcase-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 10px;
    transform: translateY(100px);
  }

  .brand-logo-name-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 30px;
    margin-bottom: 20px;
    flex-wrap: wrap;
  }

  .ai-product-showcase-logo-{{ ai_gen_id }} {
    width: auto !important;
    height: 70px !important;
    max-width: 250px;
    margin: 0;
    display: block;
  }

  .ai-product-showcase-logo-placeholder-{{ ai_gen_id }} {
    width: 150px;
    height: 70px;
    margin: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-showcase-product-name-{{ ai_gen_id }} {
    font-size: 42px;
    font-weight: 700;
    color: {{ block.settings.title_color }};
    margin: 0;
    letter-spacing: 2px;
  }

  .ai-product-showcase-description-{{ ai_gen_id }} {
    font-size: 18px;
    color: {{ block.settings.description_color }};
    margin: 0;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Content layout với grid 2 cột */
  .ai-product-showcase-content-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    align-items: start;
    position: relative;
    overflow: visible;
  }

  /* Features section - 2 cột */
  .ai-product-showcase-features-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 15px;
    position: relative;
    z-index: 15;
    transform: translate(100px, 150px);
  }

  .ai-product-showcase-feature-{{ ai_gen_id }} {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 15px;
    background: transparent;
    box-shadow: none;
    padding: 8px 0;
    text-align: left;
    margin-bottom: 10px;
    min-height: 60px;
    transition: transform 0.3s ease;
  }

  .ai-product-showcase-feature-{{ ai_gen_id }}:hover {
    transform: translateX(10px);
  }

  /* Icon được phóng to */
  .ai-product-showcase-feature-icon-{{ ai_gen_id }} {
    width: 60px;
    height: 60px;
    margin: 0;
    background: transparent;
    border-radius: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.icon_color }};
    flex-shrink: 0;
  }

  .ai-product-showcase-feature-icon-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
  }

  .ai-product-showcase-feature-icon-{{ ai_gen_id }} img {
    width: 60px !important;
    height: 60px !important;
    object-fit: contain;
  }

  .ai-product-showcase-feature-content-{{ ai_gen_id }} {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .ai-product-showcase-feature-text-{{ ai_gen_id }} {
    font-size: 16px;
    font-weight: 600;
    color: {{ block.settings.feature_text_color }};
    margin: 0;
    line-height: 1.3;
    white-space: normal;
    word-wrap: break-word;
    hyphens: auto;
  }

  .ai-product-showcase-feature-description-{{ ai_gen_id }} {
    font-size: 13px;
    font-weight: 400;
    color: {{ block.settings.description_color | default: '#888888' }};
    margin: 0;
    line-height: 1.4;
    white-space: normal;
    word-wrap: break-word;
    opacity: 0.8;
  }

  /* Image container */
  .ai-product-showcase-image-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: auto;
    text-align: center;
    overflow: hidden;
    z-index: 1;
  }

  .ai-product-showcase-image-{{ ai_gen_id }} {
    width: 130%;
    height: auto;
    max-height: none;
    object-fit: contain;
    position: relative;
    z-index: 1;
    transform: translateX(-15%);
    opacity: 1;
  }

  .ai-product-showcase-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 600px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 1;
  }

  .ai-product-showcase-image-placeholder-{{ ai_gen_id }} svg {
    width: 200px;
    height: 200px;
    opacity: 0.3;
  }

  .ai-product-showcase-mobile-image-{{ ai_gen_id }} {
    display: none;
  }

  /* Responsive Design */
  @media screen and (max-width: 959px) {
    .ai-product-showcase-{{ ai_gen_id }} {
      padding: 20px 10px;
    }

    .ai-product-showcase-container-{{ ai_gen_id }} {
      max-width: 100%;
      width: 100%;
      padding-left: 20px;
      padding-right: 20px;
    }

    .ai-product-showcase-content-{{ ai_gen_id }} {
      display: grid;
      grid-template-columns: 1fr;
      gap: 10px;
      align-items: start;
    }

    .ai-product-showcase-product-name-{{ ai_gen_id }} {
      font-size: 36px;
    }

    .ai-product-showcase-feature-icon-{{ ai_gen_id }} {
      width: 50px;
      height: 50px;
    }

    .ai-product-showcase-feature-icon-{{ ai_gen_id }} svg,
    .ai-product-showcase-feature-icon-{{ ai_gen_id }} img {
      width: 50px !important;
      height: 50px !important;
    }

    .ai-product-showcase-feature-text-{{ ai_gen_id }} {
      font-size: 15px;
    }

    .ai-product-showcase-feature-description-{{ ai_gen_id }} {
      font-size: 12px;
    }

    .ai-product-showcase-features-{{ ai_gen_id }} {
      grid-template-columns: 1fr 1fr;
      gap: 10px;
      transform: translate(20px, 50px);
    }

    .ai-product-showcase-image-{{ ai_gen_id }} {
      width: 100%;
      transform: none;
    }

    .ai-product-showcase-header-{{ ai_gen_id }} {
      transform: translateY(50px);
    }
  }

  @media screen and (max-width: 767px) {
    .ai-product-showcase-content-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .ai-product-showcase-image-{{ ai_gen_id }} {
      width: 100%;
      transform: none;
    }

    .brand-logo-name-wrapper {
      flex-direction: column;
      gap: 10px;
    }

    .ai-product-showcase-product-name-{{ ai_gen_id }} {
      font-size: 28px;
      letter-spacing: 1px;
    }

    .ai-product-showcase-description-{{ ai_gen_id }} {
      font-size: 16px;
    }

    .ai-product-showcase-features-{{ ai_gen_id }} {
      grid-template-columns: 1fr 1fr;
      gap: 10px;
      transform: translate(10px, 30px);
    }

    .ai-product-showcase-header-{{ ai_gen_id }} {
      transform: translateY(30px);
    }

    .ai-product-showcase-feature-icon-{{ ai_gen_id }} {
      width: 45px;
      height: 45px;
    }

    .ai-product-showcase-feature-icon-{{ ai_gen_id }} svg,
    .ai-product-showcase-feature-icon-{{ ai_gen_id }} img {
      width: 45px !important;
      height: 45px !important;
    }

    .ai-product-showcase-feature-text-{{ ai_gen_id }} {
      font-size: 16px;
    }

    .ai-product-showcase-feature-description-{{ ai_gen_id }} {
      font-size: 11px;
    }

    .ai-product-showcase-desktop-image-{{ ai_gen_id }} {
      display: none;
    }

    .ai-product-showcase-mobile-image-{{ ai_gen_id }} {
      display: block;
    }

    .ai-product-showcase-image-placeholder-{{ ai_gen_id }} {
      height: 400px;
    }
  }

  @media screen and (max-width: 476px) {
    .ai-product-showcase-{{ ai_gen_id }} {
      padding: 30px 10px;
    }

    .ai-product-showcase-container-{{ ai_gen_id }} {
      padding-left: 20px;
      padding-right: 20px;
    }

    .ai-product-showcase-product-name-{{ ai_gen_id }} {
      font-size: 24px;
    }

    .ai-product-showcase-feature-{{ ai_gen_id }} {
      gap: 12px;
    }

    .ai-product-showcase-feature-icon-{{ ai_gen_id }} {
      width: 40px;
      height: 40px;
    }

    .ai-product-showcase-feature-icon-{{ ai_gen_id }} svg,
    .ai-product-showcase-feature-icon-{{ ai_gen_id }} img {
      width: 40px !important;
      height: 40px !important;
    }

    .ai-product-showcase-feature-text-{{ ai_gen_id }} {
      font-size: 14px;
    }

    .ai-product-showcase-logo-{{ ai_gen_id }},
    .ai-product-showcase-logo-placeholder-{{ ai_gen_id }} {
      height: 50px;
      max-width: 150px;
    }
  }
{% endstyle %}

<div class="ai-product-showcase-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-showcase-container-{{ ai_gen_id }}">
    <!-- Header với logo và tên sản phẩm nằm ngang -->
    <div class="ai-product-showcase-header-{{ ai_gen_id }}">
      <div class="brand-logo-name-wrapper">
        {% if block.settings.logo %}
          <img
            src="{{ block.settings.logo | image_url: width: 300 }}"
            alt="{{ block.settings.logo.alt | default: 'Brand logo' | escape }}"
            class="ai-product-showcase-logo-{{ ai_gen_id }}"
            loading="lazy"
          >
        {% else %}
          <div class="ai-product-showcase-logo-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
        <h1 class="ai-product-showcase-product-name-{{ ai_gen_id }}">{{ block.settings.product_name }}</h1>
      </div>
      <p class="ai-product-showcase-description-{{ ai_gen_id }}">{{ block.settings.product_description }}</p>
    </div>

    <!-- Content với features và image -->
    <div class="ai-product-showcase-content-{{ ai_gen_id }}">
      <!-- Features section - 2 cột -->
      <div class="ai-product-showcase-features-{{ ai_gen_id }}">
        {% for i in (1..8) %}
          {% liquid
            assign feature_text_key = 'feature_' | append: i | append: '_text'
            assign feature_text = block.settings[feature_text_key]
            assign feature_desc_key = 'feature_' | append: i | append: '_description'
            assign feature_desc = block.settings[feature_desc_key]
            assign feature_icon_key = 'feature_' | append: i | append: '_icon'
            assign feature_icon = block.settings[feature_icon_key]
          %}
          
          {% if feature_text != blank %}
            <div class="ai-product-showcase-feature-{{ ai_gen_id }}">
              <div class="ai-product-showcase-feature-icon-{{ ai_gen_id }}">
                {% if feature_icon %}
                  <img
                    src="{{ feature_icon | image_url: width: 120 }}"
                    alt="Feature {{ i }} icon"
                    loading="lazy"
                  >
                {% else %}
                  {% case i %}
                    {% when 1 %}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/>
                      </svg>
                    {% when 2 %}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M14 14.76V3.5a2.5 2.5 0 0 0-5 0v11.26a3.5 3.5 0 1 0 5 0z"/>
                      </svg>
                    {% when 3 %}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"/>
                        <polyline points="12,6 12,12 16,14"/>
                      </svg>
                    {% when 4 %}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M5 12.55a11 11 0 0 1 14.08 0"/>
                        <path d="M1.42 9a16 16 0 0 1 21.16 0"/>
                        <path d="M8.53 16.11a6 6 0 0 1 6.95 0"/>
                        <line x1="12" y1="20" x2="12.01" y2="20"/>
                      </svg>
                    {% when 5 %}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
                        <circle cx="12" cy="12" r="4"/>
                      </svg>
                    {% when 6 %}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                        <line x1="16" y1="2" x2="16" y2="6"/>
                        <line x1="8" y1="2" x2="8" y2="6"/>
                        <line x1="3" y1="10" x2="21" y2="10"/>
                        <path d="M8 14h.01"/>
                        <path d="M12 14h.01"/>
                        <path d="M16 14h.01"/>
                        <path d="M8 18h.01"/>
                        <path d="M12 18h.01"/>
                        <path d="M16 18h.01"/>
                      </svg>
                    {% when 7 %}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 2v6.5"/>
                        <path d="M12 22v-6.5"/>
                        <path d="M22 12h-6.5"/>
                        <path d="M2 12h6.5"/>
                        <path d="M18.36 5.64l-4.6 4.6"/>
                        <path d="M5.64 18.36l4.6-4.6"/>
                        <path d="M18.36 18.36l-4.6-4.6"/>
                        <path d="M5.64 5.64l4.6 4.6"/>
                      </svg>
                    {% when 8 %}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                        <path d="M2 17l10 5 10-5"/>
                        <path d="M2 12l10 5 10-5"/>
                      </svg>
                  {% endcase %}
                {% endif %}
              </div>
              <div class="ai-product-showcase-feature-content-{{ ai_gen_id }}">
                <p class="ai-product-showcase-feature-text-{{ ai_gen_id }}">{{ feature_text }}</p>
                {% if feature_desc != blank %}
                  <p class="ai-product-showcase-feature-description-{{ ai_gen_id }}">{{ feature_desc }}</p>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <!-- Image section -->
      <div class="ai-product-showcase-image-container-{{ ai_gen_id }}">
        {% if block.settings.desktop_image %}
          <img
            src="{{ block.settings.desktop_image | image_url: width: 800 }}"
            alt="{{ block.settings.desktop_image.alt | default: block.settings.product_name | escape }}"
            class="ai-product-showcase-image-{{ ai_gen_id }} ai-product-showcase-desktop-image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.desktop_image.width }}"
            height="{{ block.settings.desktop_image.height }}"
          >
        {% else %}
          <div class="ai-product-showcase-image-placeholder-{{ ai_gen_id }} ai-product-showcase-desktop-image-{{ ai_gen_id }}">
            {{ 'product-apparel-1' | placeholder_svg_tag }}
          </div>
        {% endif %}

        {% if block.settings.mobile_image %}
          <img
            src="{{ block.settings.mobile_image | image_url: width: 600 }}"
            alt="{{ block.settings.mobile_image.alt | default: block.settings.product_name | escape }}"
            class="ai-product-showcase-image-{{ ai_gen_id }} ai-product-showcase-mobile-image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.mobile_image.width }}"
            height="{{ block.settings.mobile_image.height }}"
          >
        {% else %}
          <div class="ai-product-showcase-image-placeholder-{{ ai_gen_id }} ai-product-showcase-mobile-image-{{ ai_gen_id }}">
            {{ 'product-apparel-1' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

