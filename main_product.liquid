      const today = new Date();
      const minDays = 10;
      const maxDays = 15;
      
      // Tính ngày giao hàng sớm nhất (10 ngày)
      const earliestDate = new Date(today);
      earliestDate.setDate(today.getDate() + minDays);
      
      // Tính ngày giao hàng muộn nhất (15 ngày)
      const latestDate = new Date(today);
      latestDate.setDate(today.getDate() + maxDays);
      
      // Format ngày theo định dạng "Aug 2"
      const formatDate = (date) => {
        const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 
                       'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
        const month = months[date.getMonth()];
        const day = date.getDate();
        return `${month} ${day}`;
      };
      
      return `${formatDate(earliestDate)} - ${formatDate(latestDate)}`;
