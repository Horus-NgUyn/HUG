  <script>
    // Image URLs from Shopify product or fallback
    const templateImageUrls = [
      {% if product.images.size > 0 %}
        {% for image in product.images %}
          "{{ image | img_url: '800x800' }}"{% unless forloop.last %},{% endunless %}
        {% endfor %}
      {% else %}
        "https://cdn.shopify.com/s/files/1/0943/9441/7472/files/imgi_62_IMG_4860---_-2_1_2467e855-fc0f-4ddd-8d77-2ce85b26bae3.jpg?v=1753084137",
        "https://cdn.shopify.com/s/files/1/0943/9441/7472/files/imgi_17_Bildschirmfoto_2025-05-30_um_05.25.19_upscaled_1_f64115dc-dbdf-4f7a-9585-5d2eaf5b83a5.png?v=1753088737",
        "https://cdn.shopify.com/s/files/1/0943/9441/7472/files/imgi_20_Untitled_design_9_a19d055a-4b50-4fc4-a207-378f08e96192.png?v=1752830439",
        "https://cdn.shopify.com/s/files/1/0943/9441/7472/files/imgi_16_Bildschirmfoto_2025-05-30_um_05.36.24_f5c1ed23-d588-496b-bba1-fa913d8a3831.png?v=1752830439",
        "https://cdn.shopify.com/s/files/1/0943/9441/7472/files/imgi_18_O1CN01YZtSHk1UNLBIhdNXa__2658812505_-_Edited_1.png?v=1752830439",
        "https://cdn.shopify.com/s/files/1/0943/9441/7472/files/imgi_16_Bildschirmfoto_2025-05-30_um_05.36.24_f5c1ed23-d588-496b-bba1-fa913d8a3831_1.png?v=1752830439"
      {% endif %}
    ];

    let templateCurrentIndex = 0;

    // Get real prices from Shopify
    const templateProductPrice = {{ product.price | default: 18900 }};
    const templateProductComparePrice = {{ product.compare_at_price | default: product.price }};
            const templateShowPowerBank = {{ show_power_bank | json }};
        const templateShowBundleSection = {{ show_bundle_section | json }};
    
    const templatePriceData = {
      productPrice: templateProductPrice / 100, // Convert from cents to dollars
      comparePrice: templateProductComparePrice / 100
    };

    function templateUpdateMainImage() {
      const mainImg = document.getElementById("templateMainImage");
      const hoverZoomImg = document.getElementById("templateHoverZoomImage");
      const thumbnails = document.querySelectorAll(".template-thumbnail");
      
      if (templateImageUrls.length > 0) {
        mainImg.src = templateImageUrls[templateCurrentIndex];
        hoverZoomImg.src = templateImageUrls[templateCurrentIndex];

        thumbnails.forEach((thumb, i) => {
          thumb.classList.toggle("active", i === templateCurrentIndex);
        });
      }
    }

    function templateChangeImage(direction) {
      if (templateImageUrls.length > 0) {
        templateCurrentIndex = (templateCurrentIndex + direction + templateImageUrls.length) % templateImageUrls.length;
        templateUpdateMainImage();
      }
    }

    function templateSetupHoverZoom() {
      const mainImage = document.getElementById('templateMainImage');
      const hoverZoomContainer = document.getElementById('templateHoverZoomContainer');
      const hoverZoomImage = document.getElementById('templateHoverZoomImage');
      
      if (!mainImage || !hoverZoomContainer || !hoverZoomImage) return;
      
      mainImage.addEventListener('mouseenter', function() {
        if (window.innerWidth > 900) {
          hoverZoomContainer.classList.add('show');
        }
      });
      
      mainImage.addEventListener('mouseleave', function() {
        hoverZoomContainer.classList.remove('show');
      });
      
      mainImage.addEventListener('mousemove', function(e) {
        if (window.innerWidth <= 900) return;
        
        const rect = mainImage.getBoundingClientRect();
        const x = (e.clientX - rect.left) / rect.width;
        const y = (e.clientY - rect.top) / rect.height;
        
        // Clamp values between 0 and 1
        const clampedX = Math.max(0, Math.min(1, x));
        const clampedY = Math.max(0, Math.min(1, y));
        
        const zoomLevel = 2.5;
        const moveX = clampedX * 100;
        const moveY = clampedY * 100;
        
        hoverZoomImage.style.transformOrigin = `${moveX}% ${moveY}%`;
        hoverZoomImage.style.transform = `scale(${zoomLevel})`;
      });
    }

    function templatePreloadImages() {
      templateImageUrls.forEach(url => {
        const img = new Image();
        img.src = url;
      });
    }

        function templateUpdatePrice() {
      let variant = 'without-powerbank'; // Default when Power Bank is hidden
      
      // Check if Power Bank selection is enabled and get variant
      if (templateShowPowerBank) {
        variant = document.querySelector('input[name="template-variant"]:checked')?.value || 'with-powerbank';
      }
      
      const packingCubesChecked = document.querySelector('input[name="template-bundle-packing-cubes"]:checked');
      
      let basePrice = templatePriceData.productPrice;
      let comparePrice = templatePriceData.comparePrice;
      
      // Power Bank logic (only if Power Bank selection is enabled)
      if (templateShowPowerBank && variant === 'with-powerbank') {
        basePrice = basePrice * 1.1183; // +12% for Power Bank
        comparePrice = comparePrice * 1.183;
      }
      // No Power Bank keeps original price
      
      // Vix Pump is always included and FREE, no price added
      
      // Add Packing Cubes price if selected (only if Bundle section is enabled)
      if (templateShowBundleSection && packingCubesChecked) {
        basePrice += 29.99; // Packing Cubes price
        comparePrice += 60.00; // Original price of packing cubes
      }
      
      // Calculate save percentage
      const saveAmount = comparePrice - basePrice;
      const savePercent = comparePrice > basePrice ? Math.round((saveAmount / comparePrice) * 100) : 0;
      
      document.getElementById('templateOldPrice').textContent = `$${comparePrice.toFixed(2)}`;
      document.getElementById('templateNewPrice').textContent = `$${basePrice.toFixed(2)}`;
      document.getElementById('templateSaveBadge').textContent = savePercent > 0 ? `SAVE ${savePercent}%` : '';
      templateUpdateBuyNowPrice();
    }

    let templateQuantity = 1;

    function templateChangeQuantity(change) {
      const quantityInput = document.getElementById('templateQuantity');
      templateQuantity = Math.max(1, Math.min(10, templateQuantity + change));
      quantityInput.value = templateQuantity;
      templateUpdateBuyNowPrice();
    }

        function templateUpdateBuyNowPrice() {
      let variant = 'without-powerbank'; // Default when Power Bank is hidden
      
      // Check if Power Bank selection is enabled and get variant
      if (templateShowPowerBank) {
        variant = document.querySelector('input[name="template-variant"]:checked')?.value || 'with-powerbank';
      }
      
      const packingCubesChecked = document.querySelector('input[name="template-bundle-packing-cubes"]:checked');
      
